@model IEnumerable<AppData.Models.SanPham>

@{
    ViewData["Title"] = "Index";
}
<!-- slider show -->
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/img/slideshow1.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/img/slideshow2.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/img/slideshow3.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<!-- end slider show -->
<section class="shop_section layout_padding">
    <div class="container">
        <div class="heading_container heading_center">
            <h2>
                Latest Products
            </h2>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="box">
                        <a href="/Home/SanPhamCT/@item.Id">
                            <div class="img-box">
                                @{
                                    var extension = System.IO.Path.GetExtension(item.AnhSP);
                                }
                                @if (@extension.Contains(extension))
                                {
                                    <img src="~/img/@item.AnhSP">
                                }
                                else
                                {
                                    <img src="https://www.google.com/url?sa=i&url=https%3A%2F%2Fwww.facebook.com%2Finternetexplorerbeta%2Fposts%2Fanh-li%25C3%25AAm-gi%25C3%25A0nh-cup-v%25C3%25A0ng-th%25E1%25BB%2583-hi%25E1%25BB%2587n-%25C4%2591%25E1%25BA%25B3ng-c%25E1%25BA%25A5p-out-tr%25C3%25ACnh-to%25C3%25A0n-b%25E1%25BB%2599-c%25C3%25A1c-%25C4%2591%25E1%25BB%2591i-th%25E1%25BB%25A7-%25C4%2591%25E1%25BA%25BFn-t%25E1%25BB%25AB-n%2F728945255938708%2F&psig=AOvVaw2HlyEieUFs1K1YDTZcAllt&ust=1711695350707000&source=images&cd=vfe&opi=89978449&ved=0CBIQjRxqFwoTCKCm15ywloUDFQAAAAAdAAAAABAE">
                                }
                            </div>
                            <h6 class="d-flex justify-content-center">
                                @Html.DisplayFor(modelItem => item.TenSP)
                            </h6>
                            <h6>
                                Giá
                                <span class="fw-bold text-danger">
                                    @Html.DisplayFor(modelItem => item.GiaSP)đ
                                </span>
                            </h6>
                            <div class="new">
                                <span>
                                    New
                                </span>
                            </div>
                            <div class="d-flex justify-content-evenly">
                                <i class="fa-solid fa-cart-shopping"></i>
                                <i class="fa fa-retweet"></i>
                            </div>
                        </a>
                        <form action="@Url.Action("AddToCart", "SanPham")" method="post">
                            <div class="form-group">
                                <label for="SoLuong">Số lượng:</label>
                                <input type="number" id="quantity" name="SoLuong" min="1" class="form-control" placeholder="Nhập số lượng" />
                            </div>
                            <div class="mt-3">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-outline-primary"> <i class="fa-solid fa-bag-shopping"></i> Thêm vào giỏ hàng</button>
                                <button class="btn btn-danger">Mua ngay</button>
                            </div>
                        </form>
                    </div>
                </div>
            }
            <div class="btn-box">
                <a href="">
                    View All Products
                </a>
            </div>
        </div>
    </div>
</section>

<!-- end Sản phẩm -->
